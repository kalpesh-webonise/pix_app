!!!
%html{lang: "en"}
  %head
    %meta{charset: "utf-8"}/
    %meta{content: "IE=Edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}/
    %title Portal for Information eXchange
    = csrf_meta_tags
    /[if lt IE 9]
      <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js" type="text/javascript"></script>
    = stylesheet_link_tag "application", media: "all"
    = yield :css
  %body
    .navbar.navbar-fixed-top.navbar-inverse
      .navbar-inner
        .container
          %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          - if current_user
            %a.brand{href: "/posts", class: "ajaxify"} Portal for Information eXchange
            .container.nav-collapse
              %ul.nav
                - if current_user.is_admin
                  %li{rel: "users"}= link_to "Users",users_path, class: "ajaxify"
                  %li{rel: "categories"}= link_to "Categories", "/categories", class: "ajaxify"
                  %li{rel: "posts"}= link_to "Posts", "/posts", class: "ajaxify"
              %ul.nav.pull-right
                %li.dropdown
                  %a.dropdown-toggle{"data-toggle" => "dropdown", href: "javascript:void(0);"}
                    = current_user.email
                    %b.caret
                  %ul.dropdown-menu
                    %li= link_to "Logout", destroy_user_session_path, method: :delete
          - else
            %a.brand{href: "/"} Portal for Information eXchange
    .container.body
      .row
        .span12#contentBody
          .actionLoader
          = bootstrap_flash
          = yield
      %footer
        %p
          \Â© Portal for Information eXchange #{Time.now.year}
    %a{href: "javascript:void(0)", class: "btn btn-primary disabled back-to-top", style: "position: fixed; bottom: 30px; right: 0px; border-top-right-radius:0px; border-bottom-right-radius:0px; cursor: pointer;"}Back to Top
    .dn.activeTab= params[:controller]
    = javascript_include_tag "application"
    = yield :js